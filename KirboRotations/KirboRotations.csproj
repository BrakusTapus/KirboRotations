<Project Sdk="Microsoft.NET.Sdk">

    <!-- General Project Settings -->
    <PropertyGroup>
        <AssemblyName>KirboRotations</AssemblyName>
        <Authors>Kirbo</Authors>
        <Version>1.0.0.19</Version>
        <TargetFramework>net7.0-windows</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <Platforms>AnyCPU</Platforms>
        <DalamudLibPath>$(AppData)\XIVLauncher\addon\Hooks\dev\</DalamudLibPath>
        <ImplicitUsings>enable</ImplicitUsings>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>

    <!-- Rotation Solver's ECommons Path -->
    <PropertyGroup>
        <RSversion>3.5.6.9</RSversion>
        <RSInstallPath>$(AppData)\XIVPlugins\Projects\RotationSolver\Kirbo\RotationSolver\RotationSolver\bin\Release</RSInstallPath>
        <ECommonsHintPath>$(RSInstallPath)</ECommonsHintPath>
    </PropertyGroup>


    <!-- Debug Configuration Settings -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <NoWarn>1701;1702;S3358;S1871;S1144;S125;S108;S1751;S1481;S101;CS0618;</NoWarn>
        <WarningsAsErrors>$(WarningsAsErrors);NU1605;</WarningsAsErrors>
    </PropertyGroup>

    <!-- Release Configuration Settings -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <NoWarn>1701;1702;S3358;S1871;S1144;S125;S108;S1751;S1481;S101;CS0618;</NoWarn>
        <WarningsAsErrors>$(WarningsAsErrors);NU1605;</WarningsAsErrors>
    </PropertyGroup>

